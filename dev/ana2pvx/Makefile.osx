#
#	OSX makefile for ana2pvx Richard Dobson Nov 1 2022
#	
#
# NB this depends on the sfsys library in the CDP8 repository. 
# sfsys will need to be built and libsfsys.a put in the lib directory for external access.

CC=cc
CPP=g++
CDPROOT=../../../CDP8
SFINC=$(CDPROOT)/include
PVXINC=../include
PVXLIB=../lib
SFSYS=$(CDPROOT)/lib
CFLAGS= -Wall -O2 -arch x86_64 -mmacosx-version-min=10.8  -I$(PVXINC) -I$(SFINC)
PROG= ana2pvx

.c.o:
	$(CC) $(CFLAGS) -c $<
.cpp.o:
	$(CPP) $(CFLAGS) -c $<
#
#	targets
#
	 
all:	$(PROG) 

$(PROG):	ana2pvx.o
	$(CC) $(CFLAGS) ana2pvx.o -o $(PROG) -L$(PVXLIB) -L$(SFSYS) -lsfsys -lupvxio 

clean:
	-rm -f *.o

veryclean:	clean
	rm  -f $(PROG) 

install:	$(PROG)
	cp $(PROG) ../Release
	
