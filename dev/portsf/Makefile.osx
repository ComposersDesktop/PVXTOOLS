CC=cc
#CFLAGS= -Wall -Dunix -DPSF_DEBUG -D_DEBUG -I../include
CFLAGS=-O2 -Wall -mmacosx-version-min=10.8  -Dunix -I../include
TARGET=libportsf.a
PSFOBJS=portsf.o ieee80.o


.c.o:
	$(CC) $(CFLAGS) -c $<
#
#	targets
#
all:	$(TARGET)

clean:
	-rm -f  $(PSFOBJS)

veryclean:
	-rm -f  $(PSFOBJS) $(TARGET)

$(TARGET):	$(PSFOBJS)
	libtool -static -o $(TARGET) $(PSFOBJS)
	ranlib $(TARGET)

install:	$(TARGET)
	cp $(TARGET) ../lib
	

#
#	dependencies
#
portsf.o:	../include/portsf.h ieee80.h

